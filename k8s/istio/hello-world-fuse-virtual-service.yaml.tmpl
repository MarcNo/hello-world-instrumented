apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: hello-world-fuse
spec:
  gateways:
  - hello-world-gateway
  hosts:
  - hello-world-istio.<istio-subdomain>
  http:
  - match:
    - uri:
        exact: /api/hello
    route:
    - destination:
        host: fuse7-hello
        port:
          number: 8080
    retries:
      attempts: 7
      perTryTimeout: 10s
