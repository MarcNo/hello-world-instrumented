apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: hello-world
spec:
  gateways:
  - hello-world-gateway
  hosts:
  - hello-world-istio.<istio-subdomain>
  http:
  - match:
    - uri:
        exact: /
    mirror:
      host: hello-world-istio
      port:
        number: 8080
      subset: canary
    route:
    - destination:
        host: hello-world-istio
        port:
          number: 8080
        subset: production
      weight: 100
    retries:
      attempts: 10
      perTryTimeout: 12s
